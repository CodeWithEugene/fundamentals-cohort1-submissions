    },
    {
      "name": "List Payments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4100/api/payments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4100",
          "path": ["api", "payments"]
        }
      }
    },
    {
      "name": "Update Payment Status",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"COMPLETED\"\n}"
